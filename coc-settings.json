{
	"coc.preferences.messageLevel": "more",
	"coc.preferences.messageDialogKind": "notification",
	"diagnostic.enableMessage": "always",
	"tsserver.locale": "en",
	"diagnostic.level": "warning",
	"tsserver.npm": "/usr/bin/npm",
	// If tsserver seems broken in the monorepo, try replacing with the line below (or a better version)
	"tsserver.useLocalTsdk": true,
	// "tsserver.tsdk": "/Users/jparra/.nvm/versions/node/v18.18.2/lib/node_modules/typescript/lib",
	"diagnostic.displayByAle": false,
	"diagnostic.displayByVimDiagnostic": true,
	// neovim runtime for a homebrew installation
	"Lua.workspace.library": [
		"~/.local/share/bob/nightly/share/nvim/runtime/lua",
		"~/.local/share/bob/nightly/share/nvim/runtime/lua/vim",
		"~/.local/share/bob/nightly/share/nvim/runtime/lua/vim/lsp"
	],
	"Lua.diagnostics.globals": [
		"vim"
	],
	"Lua.workspace.checkThirdParty": false,
	"snippets.ultisnips.pythonPrompt": false,
	"prettier.onlyUseLocalVersion": true,
	"eslint.format.enable": true,
	"languageserver": {
		"biome": {
			"enable": true,
			"command": "yarn",
			"args": ["biome", "lsp-proxy"],
			"filetypes": ["javascript", "typescript", "javascriptreact", "typescriptreact", "json", "jsonc"],
			"rootPatterns": ["biome.json", "biome.jsonc"],
			"requireRootPattern": true,
			"formatterPriority": 10
		}
	}
}